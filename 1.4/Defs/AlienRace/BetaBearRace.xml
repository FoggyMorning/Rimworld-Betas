                <debugColor>(0, 0, 0, 1)</debugColor>
                <offset>(-0.12, 0, 0.30)</offset>
              </replacement>
              <offsets>
                <west>
                  <bodyTypes>
                    <Male>( -0.15, 0.30)</Male>
                    <Female>( -0.25, 0.30)</Female>
                    <Hulk>( -0.22, 0.30)</Hulk>
                    <Thin>( -0.22, 0.30)</Thin>
                    <Fat>( -0.22, 0.30)</Fat>
                  </bodyTypes>
                </west>
              </offsets>
            </li>
          </anchorReplacements>
        </alienPartGenerator>
        <forcedRaceTraitEntries>
          <li>
            <!-- where does a bear beta sleep?  Where ever he/she wants -->
            <defName>Greedy</defName>
            <chance>50</chance>
          </li>
          <li>
            <!-- how much food does a bear beta eat? all of it. -->
            <defName>Gourmand</defName>
            <chance>50</chance>
          </li>
        </forcedRaceTraitEntries>
      </generalSettings>
      <graphicPaths>
        <head>Betas/BetaBear/Head/</head>
      </graphicPaths>
      <styleSettings>
        <li>
          <key>HairDef</key>
          <value>
            <hasStyle>true</hasStyle>
          </value>
        </li>
        <li>
          <key>BeardDef</key>
          <value>
            <hasStyle>false</hasStyle>
          </value>
        </li>
        <li>
          <key>TattooDef</key>
          <value>
            <hasStyle>false</hasStyle>
          </value>
        </li>
      </styleSettings>
    </alienRace>
    <race>
      <!-- special leather -->
      <leatherDef>Leather_Bear</leatherDef>
      <lifeStageAges>
        <li>
          <def>BetaAdult</def>
          <minAge>18</minAge>
          <soundWounded>Pawn_Bear_Injured</soundWounded>
          <soundDeath>Pawn_Bear_Death</soundDeath>
          <soundCall>Pawn_Bear_Call</soundCall>
          <soundAngry>Pawn_Bear_Angry</soundAngry>
