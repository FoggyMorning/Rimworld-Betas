<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <AlienRace.ThingDef_AlienRace ParentName="BaseBetaPawn">
    <defName>BetaElk_Male</defName>
    <label>beta-humanoid (elk)</label>
    <description>A "Beta", a Beta Class Humanoid Lifeform. Part human and part Elk or Deer.</description>
    <statBases>
      <MarketValue>2000</MarketValue>
      <!-- elks are quick -->
      <MoveSpeed>4.7</MoveSpeed>
      <!-- elks are strong -->
      <CarryingCapacity>75</CarryingCapacity>
      <!-- elks suck at mining -->
      <MiningSpeed>0.9</MiningSpeed>
    </statBases>
    <tools Inherit="False">
      <li>
        <label>left fist</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>8.2</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>LeftHand</linkedBodyPartsGroup>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>14</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
      <li>
        <label>right fist</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>8.2</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>RightHand</linkedBodyPartsGroup>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>14</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
      <li>
        <label>teeth</label>
        <capacities>
          <li>Bite</li>
        </capacities>
        <power>4</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
        <chanceFactor>0.07</chanceFactor>
      </li>
      <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>5</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <chanceFactor>0.02</chanceFactor>
      </li>
      <li>
        <label>left antler</label>
        <capacities>
          <li>Poke</li>
          <li>Blunt</li>
        </capacities>
        <power>4</power>
        <cooldownTime>4</cooldownTime>
        <linkedBodyPartsGroup>AntlerAttackToolLeft</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
      </li>
      <li>
        <label>right antler</label>
        <capacities>
          <li>Poke</li>
          <li>Blunt</li>
        </capacities>
        <power>4</power>
        <cooldownTime>4</cooldownTime>
        <linkedBodyPartsGroup>AntlerAttackToolRight</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
      </li>
    </tools>
    <alienRace>
      <generalSettings>
        <maleGenderProbability>1.0</maleGenderProbability>
        <notXenophobistTowards>
          <li>BetaElk_Female</li>
        </notXenophobistTowards>
        <alienPartGenerator>
          <bodyTypes>
            <li>Male</li>
            <li>Thin</li>
            <li>Fat</li>
            <li>Hulk</li>
          </bodyTypes>
          <headTypes Inherit="False">
            <li>BetaHumanoids_BetaElk_Male_Average_Normal</li>
          </headTypes>
          <borderScale>2</borderScale>
          <atlasScale>2</atlasScale>
          <colorChannels Inherit="False">
            <li>
              <name>skin</name>
              <first Class="ColorGenerator_Options">
                <options>
                  <!-- #7f725d -->
                  <li>
                    <weight>10</weight>
                    <only>RGBA(0.498, 0.447, 0.364,1)</only>
                  </li>
                  <!-- #ba8759 -->
                  <li>
                    <weight>10</weight>
                    <only>RGBA(0.729, 0.529, 0.349,1)</only>
                  </li>
                  <!-- #958772 -->
                  <li>
                    <weight>10</weight>
                    <only>RGBA(0.584, 0.529, 0.447,1)</only>
                  </li>
                  <!-- #836d55 -->
                  <li>
                    <weight>10</weight>
                    <only>RGBA(0.513, 0.427, 0.333,1)</only>
                  </li>
                  <!-- #7e5a58 -->
                  <li>
                    <weight>10</weight>
                    <only>RGBA(0.494, 0.352, 0.345,1)</only>
                  </li>
                </options>
              </first>
            </li>
          </colorChannels>
          <headOffset>(0,.1)</headOffset>
          <bodyAddons Inherit="False">
            <li>
              <path>Betas/BetaElk/Antlers/Antler_Left</path>
              <bodyPart>BetaHumanoids_BodyPart_Antler_Large_Left</bodyPart>
              <drawSize>1</drawSize>
              <inFrontOfBody>true</inFrontOfBody>
              <offsets>
                <south>
                  <layerOffset>-0.01</layerOffset>
                  <headTypes Inherit="False">
                    <BetaHumanoids_BetaElk_Male_Average_Normal>( 0.0, 0.8 )</BetaHumanoids_BetaElk_Male_Average_Normal>
                  </headTypes>
                </south>
                <north>
                  <layerOffset>0.3</layerOffset>
                  <headTypes Inherit="False">
                    <BetaHumanoids_BetaElk_Male_Average_Normal>( 0.0, 0.8 )</BetaHumanoids_BetaElk_Male_Average_Normal>
                  </headTypes>
                </north>
                <east>
                  <layerOffset>-0.01</layerOffset>
                  <headTypes Inherit="False">
                    <BetaHumanoids_BetaElk_Male_Average_Normal>( 0.0, 0.8 )</BetaHumanoids_BetaElk_Male_Average_Normal>
                  </headTypes>
                </east>
              </offsets>
            </li>
            <li>
              <path>Betas/BetaElk/Antlers/Antler_Right</path>
              <bodyPart>BetaHumanoids_BodyPart_Antler_Large_Right</bodyPart>
              <linkVariantIndexWithPrevious>true</linkVariantIndexWithPrevious>
              <drawSize>1</drawSize>
              <inFrontOfBody>true</inFrontOfBody>
              <offsets>
                <south>
                  <layerOffset>-0.01</layerOffset>
                  <headTypes Inherit="False">
                    <BetaHumanoids_BetaElk_Male_Average_Normal>( 0.0, 0.8 )</BetaHumanoids_BetaElk_Male_Average_Normal>
                  </headTypes>
                </south>
                <north>
                  <layerOffset>0.3</layerOffset>
                  <headTypes Inherit="False">
                    <BetaHumanoids_BetaElk_Male_Average_Normal>( 0.0, 0.8 )</BetaHumanoids_BetaElk_Male_Average_Normal>
                  </headTypes>
                </north>
                <east>
                  <layerOffset>-0.01</layerOffset>
                  <headTypes Inherit="False">
                    <BetaHumanoids_BetaElk_Male_Average_Normal>( 0.0, 0.8 )</BetaHumanoids_BetaElk_Male_Average_Normal>
                  </headTypes>
                </east>
              </offsets>
            </li>
            <li>
              <drawnDesiccated>false</drawnDesiccated>
              <path>Betas/BetaElk/Ears/Ear_Left</path>
              <bodyPart>BetaHumanoids_BodyPart_OuterEar_Normal_Left</bodyPart>
              <drawSize>1</drawSize>
              <inFrontOfBody>true</inFrontOfBody>
              <offsets>
                <south>
                  <headTypes Inherit="False">
                    <BetaHumanoids_BetaElk_Male_Average_Normal>( 0.0, 0.3 )</BetaHumanoids_BetaElk_Male_Average_Normal>
                  </headTypes>
                </south>
                <north>
                  <layerOffset>0.3</layerOffset>
                  <headTypes Inherit="False">
                    <BetaHumanoids_BetaElk_Male_Average_Normal>( 0.0, 0.3 )</BetaHumanoids_BetaElk_Male_Average_Normal>
                  </headTypes>
                </north>
                <east>
                  <headTypes Inherit="False">
                    <BetaHumanoids_BetaElk_Male_Average_Normal>( -0.1, 0.3 )</BetaHumanoids_BetaElk_Male_Average_Normal>
                  </headTypes>
                </east>
              </offsets>
              <hiddenUnderApparelFor>
                <li>UpperHead</li>
              </hiddenUnderApparelFor>
              <hiddenUnderApparelTag>
                <li>BetaHumanoids_EarsTag</li>
              </hiddenUnderApparelTag>
            </li>
            <li>
              <drawnDesiccated>false</drawnDesiccated>
              <path>Betas/BetaElk/Ears/Ear_Right</path>
              <bodyPart>BetaHumanoids_BodyPart_OuterEar_Normal_Right</bodyPart>
              <linkVariantIndexWithPrevious>true</linkVariantIndexWithPrevious>
              <drawSize>1</drawSize>
              <inFrontOfBody>true</inFrontOfBody>
              <offsets>
                <south>
                  <headTypes Inherit="False">
                    <BetaHumanoids_BetaElk_Male_Average_Normal>( 0.0, 0.3 )</BetaHumanoids_BetaElk_Male_Average_Normal>
                  </headTypes>
                </south>
                <north>
                  <layerOffset>0.3</layerOffset>
                  <headTypes Inherit="False">
                    <BetaHumanoids_BetaElk_Male_Average_Normal>( 0.0, 0.3 )</BetaHumanoids_BetaElk_Male_Average_Normal>
                  </headTypes>
                </north>
                <east>
                  <headTypes Inherit="False">
                    <BetaHumanoids_BetaElk_Male_Average_Normal>( -0.1, 0.3 )</BetaHumanoids_BetaElk_Male_Average_Normal>
                  </headTypes>
                </east>
              </offsets>
              <hiddenUnderApparelFor>
                <li>UpperHead</li>
              </hiddenUnderApparelFor>
              <hiddenUnderApparelTag>
                <li>BetaHumanoids_EarsTag</li>
              </hiddenUnderApparelTag>
            </li>
          </bodyAddons>
          <anchorReplacements>
            <li>
              <originalTag>RightEye</originalTag>
              <replacement>
                <rotation>South</rotation>
                <tag>RightEye</tag>
                <offset>(-0.095, 0, 0.36)</offset>
                <canMirror>true</canMirror>
                <range>0</range>
                <layer>Head</layer>
                <debugColor>( 0, 0, 0, 1 )</debugColor>
              </replacement>
            </li>
            <li>
              <originalTag>LeftEye</originalTag>
              <replacement>
                <rotation>South</rotation>
                <tag>LeftEye</tag>
                <canMirror>true</canMirror>
                <offset>(0.095, 0, 0.36)</offset>
                <range>0</range>
                <layer>Head</layer>
                <debugColor>( 0, 0, 0, 1 )</debugColor>
              </replacement>
            </li>
            <li>
              <originalTag>RightEye</originalTag>
              <replacement>
                <rotation>East</rotation>
                <tag>RightEye</tag>
                <canMirror>false</canMirror>
                <range>0</range>
                <layer>Head</layer>
                <debugColor>( 0, 0, 0, 1 )</debugColor>
                <offset>(0.15, 0, 0.30)</offset>
              </replacement>
              <offsets>
                <east>
                  <bodyTypes>
                    <Male>( 0.15, 0.36)</Male>
                    <Hulk>( 0.22, 0.36)</Hulk>
                    <Thin>( 0.22, 0.36)</Thin>
                    <Fat>( 0.22, 0.36)</Fat>
                  </bodyTypes>
                </east>
              </offsets>
            </li>
            <li>
              <originalTag>LeftEye</originalTag>
              <replacement>
                <rotation>West</rotation>
                <tag>LeftEye</tag>
                <canMirror>false</canMirror>
                <range>0</range>
                <layer>Head</layer>
                <debugColor>( 0, 0, 0, 1 )</debugColor>
                <offset>(-0.15, 0, 0.36)</offset>
              </replacement>
              <offsets>
                <west>
                  <bodyTypes>
                    <Male>( -0.15, 0.36)</Male>
                    <Hulk>( -0.22, 0.36)</Hulk>
                    <Thin>( -0.22, 0.36)</Thin>
                    <Fat>( -0.22, 0.36)</Fat>
                  </bodyTypes>
                </west>
              </offsets>
            </li>
          </anchorReplacements>
        </alienPartGenerator>
        <forcedRaceTraitEntries>
          <li>
            <!-- elk males spend puberty crashing their antlers together -->
            <defName>Brawler</defName>
            <chance>70</chance>
            <commonalityFemale>0</commonalityFemale>
            <commonalityMale>100</commonalityMale>
          </li>
          <li>
            <!-- elks are pretty nervous -->
            <defName>Nerves</defName>
            <chance>60</chance>
            <degree>-1</degree>
          </li>
        </forcedRaceTraitEntries>
      </generalSettings>
      <graphicPaths>
        <head>Betas/BetaElk/Head/</head>
      </graphicPaths>
      <styleSettings>
        <li>
          <key>HairDef</key>
          <value>
            <hasStyle>true</hasStyle>
          </value>
        </li>
        <li>
          <key>BeardDef</key>
          <value>
            <hasStyle>false</hasStyle>
          </value>
        </li>
        <li>
          <key>TattooDef</key>
          <value>
            <hasStyle>false</hasStyle>
          </value>
        </li>
      </styleSettings>
    </alienRace>
    <race>
      <!-- basic leather -->
      <leatherDef>Leather_Plain</leatherDef>
      <!-- need gendered body defs -->
      <body>BetaHumanoids_Bodies_HumanLikeWithAntlers</body>
      <lifeStageAges>
        <li>
          <def>BetaAdult</def>
          <minAge>18</minAge>
          <soundWounded>Pawn_Deer_Wounded</soundWounded>
          <soundDeath>Pawn_Deer_Death</soundDeath>
          <soundCall>Pawn_Deer_Call</soundCall>
          <soundAngry>Pawn_Deer_Angry</soundAngry>
        </li>
      </lifeStageAges>
      <soundMeleeHitPawn>Pawn_Melee_BigBash_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_BigBash_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_BigBash_Miss</soundMeleeMiss>
    </race>
    <recipes>
      <li>BetaHumanoids_Install_Biological_OuterEar_Normal</li>
      <li>BetaHumanoids_Install_Prosthetic_OuterEar_Normal</li>
      <li>BetaHumanoids_Install_Bionic_OuterEar_Normal</li>
      <li>BetaHumanoids_Install_Prosthetic_Antler_Large</li>
    </recipes>
  </AlienRace.ThingDef_AlienRace>
</Defs>