<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <AlienRace.ThingDef_AlienRace ParentName="Human" Abstract="True" Name="BaseBetaPawn">
    <alienRace>
      <generalSettings>
        <humanRecipeImport>true</humanRecipeImport>
        <alienPartGenerator>
        </alienPartGenerator>
      </generalSettings>
      <relationSettings>
        <relationChanceModifierLover>1</relationChanceModifierLover>
        <relationChanceModifierExLover>1</relationChanceModifierExLover>
        <relationChanceModifierFiance>1</relationChanceModifierFiance>
        <relationChanceModifierSpouse>1</relationChanceModifierSpouse>
        <relationChanceModifierExSpouse>1</relationChanceModifierExSpouse>
        <!-- Betas are vat-grown from sperm and eggs harvested from other Betas by the corporations
        that create them. When the Beta is sexually mature.
                    After the sperm and
        eggs are harvested, the Beta are sterilized. 
                    Even free Betas are
        sterile, and the procedure to reverse this is rare and expensive.
                    As a
        consequence they have no true family structure and one sperm donor may have offspring with
        many different egg donors.  -->
        <relationChanceModifierParent>.1</relationChanceModifierParent>
        <relationChanceModifierChild>.1</relationChanceModifierChild>
        <relationChanceModifierSibling>.1</relationChanceModifierSibling>
        <renamer>
          <li>
            <relation>Parent</relation>
            <label>Sperm Donor</label>
            <femaleLabel>Egg Donor</femaleLabel>
          </li>
          <li>
            <relation>Sibling</relation>
            <label>Biological Sibling</label>
            <femaleLabel>Biological Sibling</femaleLabel>
          </li>
          <li>
            <relation>Child</relation>
            <label>Biological Offspring</label>
            <femaleLabel>Biological Offspring</femaleLabel>
          </li>
        </renamer>
      </relationSettings>
      <raceRestriction>
        <blackGeneList MayRequire="Ludeon.RimWord.Biotech">
          <li MayRequire="Ludeon.RimWord.Biotech">Furskin</li>
          <li MayRequire="Ludeon.RimWord.Biotech">Jaw_Heavy</li>
          <li MayRequire="Ludeon.RimWord.Biotech">Head_Gaunt</li>
          <li MayRequire="Ludeon.RimWord.Biotech">Fertile</li>
          <li MayRequire="Ludeon.RimWord.Biotech">Inbred</li>
          <li MayRequire="Ludeon.RimWord.Biotech">Nose_Pig</li>
        </blackGeneList>
        <blackEndoCategories>
          <li>Melanin</li>
        </blackEndoCategories>
        <xenotypeList MayRequire="Ludeon.RimWord.Biotech">
          <li MayRequire="Ludeon.RimWord.Biotech">BetaHumanoids_Baseliner</li>
        </xenotypeList>
        <onlyUseRaceRestrictedXenotypes>
          true
        </onlyUseRaceRestrictedXenotypes>
      </raceRestriction>
      <graphicPaths>
        <skinShader>Cutout</skinShader>
      </graphicPaths>
    </alienRace>
    <race>
      <bloodDef>Filth_Blood</bloodDef>
      <renderTree>Humanlike</renderTree>
      <body>BetaHumanoids_Bodies_HumanLikeWithAmputatableOuterEar</body>
      <lifeStageAges Inherit="False">
        <li>
          <def>HumanlikeBaby</def>
          <minAge>0</minAge>
        </li>
        <li>
          <def>HumanlikeChild</def>
          <minAge>3</minAge>
        </li>
        <li MayRequire="Ludeon.RimWorld.Biotech">
          <def>HumanlikePreTeenager</def>
          <minAge>9</minAge>
        </li>
        <li>
          <def>HumanlikeAdult</def>
          <minAge>17</minAge>
        </li>
        <li>
          <def>BetaAdult</def>
          <minAge>17.01</minAge>
        </li>
      </lifeStageAges>
      <lifeStageWorkSettings MayRequire="Ludeon.RimWorld.Biotech">
        <Firefighter>7</Firefighter>
        <Patient>0</Patient>
        <Doctor>10</Doctor>
        <PatientBedRest>0</PatientBedRest>
        <Childcare MayRequire="Ludeon.RimWorld.Biotech">0</Childcare>
        <BasicWorker>7</BasicWorker>
        <Warden>10</Warden>
        <Handling>7</Handling>
        <Cooking>7</Cooking>
        <Hunting>7</Hunting>
        <Construction>10</Construction>
        <Growing>7</Growing>
        <Mining>7</Mining>
        <PlantCutting>7</PlantCutting>
        <Smithing>13</Smithing>
        <Tailoring>7</Tailoring>
        <Art>10</Art>
        <Crafting>7</Crafting>
        <Hauling>3</Hauling>
        <Cleaning>3</Cleaning>
        <Research>13</Research>
      </lifeStageWorkSettings>
      <ageGenerationCurve>
        <points>
          <li>(17,0)</li>
          <li>(18,100)</li>
          <li>(50,100)</li>
          <li>(60,30)</li>
          <li>(70,18)</li>
          <li>(80,10)</li>
          <li>(90,3)</li>
          <li>(100,0)</li>
        </points>
      </ageGenerationCurve>
      <useMeatFrom>Human</useMeatFrom>
      <hediffGiverSets Inherit="False">
        <li>OrganicStandard</li>
        <li>BetaHumanoids_Sterilized_HediffGiverSet</li>
      </hediffGiverSets>
    </race>
    <ingredient>
      <mergeCompatibilityTags>
        <li>HumanMeat</li>
      </mergeCompatibilityTags>
    </ingredient>
    <comps Inherit="False">
      <li MayRequire="Ludeon.RimWorld.Anomaly" Class="CompProperties_HoldingPlatformTarget">
        <baseEscapeIntervalMtbDays>120</baseEscapeIntervalMtbDays>
        <getsColdContainmentBonus>true</getsColdContainmentBonus>
      </li>
      <li MayRequire="Ludeon.RimWorld.Anomaly" Class="CompProperties_Studiable">
        <frequencyTicks>120000</frequencyTicks>
        <minMonolithLevelForStudy>1</minMonolithLevelForStudy>
        <requiresImprisonment>true</requiresImprisonment>
      </li>
    </comps>
  </AlienRace.ThingDef_AlienRace>
</Defs>