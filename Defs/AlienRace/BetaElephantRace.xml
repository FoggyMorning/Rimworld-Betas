<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <AlienRace.ThingDef_AlienRace ParentName="BaseBetaPawn">
    <defName>BetaElephant</defName>
    <label>beta-humanoid (elephant)</label>
    <description>A "Beta", a Beta Class Humanoid Lifeform. Part human and part animal. The property of the Corporation that created them. The Galactic Workers Alliance secured semi-human rights for Betas, and now some have purchased their freedom.</description>

    <statBases>
      <!-- big boys -->
      <Mass>90</Mass>
      <MarketValue>3000</MarketValue>
      <CarryingCapacity>90</CarryingCapacity>
      <SocialImpact>1.5</SocialImpact>
    </statBases>
    <tools>
      <li>
        <label>left fist</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>8.2</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>LeftHand</linkedBodyPartsGroup>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>14</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
      <li>
        <label>tusk</label>
        <capacities>
          <li>Scratch</li>
          <li>Stab</li>
        </capacities>
        <power>25</power>
        <cooldownTime>2.6</cooldownTime>
        <linkedBodyPartsGroup>TuskAttackTool</linkedBodyPartsGroup>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>14</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
      <li>
        <label>right fist</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>16.9</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>RightHand</linkedBodyPartsGroup>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>14</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
      <li>
        <label>trunk</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>8</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
        <chanceFactor>0.07</chanceFactor>
      </li>
      <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>14</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
        <chanceFactor>0.2</chanceFactor>
      </li>
    </tools>

    <alienRace>

      <generalSettings>
        <humanRecipeImport>true</humanRecipeImport>
        <alienPartGenerator>
          <customDrawSize>(1.75, 1.75)</customDrawSize>
          <customHeadDrawSize>(1.5,1.5)</customHeadDrawSize>
          <customPortraitDrawSize>(1.75, 1.75)</customPortraitDrawSize>
          <customPortraitHeadDrawSize>(1.5,1.5)</customPortraitHeadDrawSize>
          <headOffset>(0, .3)</headOffset>
          <useGenderedHeads>false</useGenderedHeads>
          <bodyAddons>
            <li>
              <path>Betas/BetaElephant/Head/Ear</path>
              <bodyPart>AmputatableEar</bodyPart>
              <drawSize>1.5</drawSize>
              <inFrontOfBody>false</inFrontOfBody>
              <layerOffset>-1.003</layerOffset>
              <offsets>
                <south>
                  <crownTypes>
                    <Average_Normal>(-.43,.85)</Average_Normal>
                  </crownTypes>
                </south>
                <north>
                  <crownTypes>
                    <Average_Normal>(0,1.2)</Average_Normal>
                  </crownTypes>
                </north>
                <east>
                  <crownTypes>
                    <Average_Normal>(-.65,.8)</Average_Normal>
                  </crownTypes>
                </east>
              </offsets>
              <hiddenUnderApparelFor>
                <li>FullHead</li>
              </hiddenUnderApparelFor>
              <useSkinColor>true</useSkinColor>
               
               
            </li>
            <li>
              <path>Betas/BetaElephant/Head/Tusk</path>
              <bodyPart>AmputatableTusk</bodyPart>
              <drawSize>1.5</drawSize>
              <inFrontOfBody>false</inFrontOfBody>
              <layerOffset>-1.002</layerOffset>
              <offsets>
                <south>
                  <crownTypes>
                    <Average_Normal>(-.42,.83)</Average_Normal>
                  </crownTypes>
                </south>
                <north>
                  <crownTypes>
                  </crownTypes>
                </north>
                <east>
                  <bodyTypes>
                    <Male>(.08,.04)</Male>
                    <Female>(0,0)</Female>
                    <Fat>(0,0)</Fat>
                    <Thin>(0,0)</Thin>
                    <Hulk>(0,0)</Hulk>
                  </bodyTypes>
                  <crownTypes>
                    <Average_Normal>(-.5,.85)</Average_Normal>
                  </crownTypes>
                </east>
              </offsets>
              <useSkinColor>false</useSkinColor>
               
               
            </li>
            <li>
              <path>Betas/BetaElephant/Head/Trunk</path>
              <bodyPart>AmputatableTrunk</bodyPart>
              <drawSize>1.5</drawSize>
              <inFrontOfBody>false</inFrontOfBody>
              <layerOffset>-1.001</layerOffset>
              <offsets>
                <south>
                  <crownTypes>
                    <Average_Normal>(-.43,.87)</Average_Normal>
                  </crownTypes>
                </south>
                <north>
                  <crownTypes>
                  </crownTypes>
                </north>
                <east>
                  <bodyTypes>
                    <Male>(.04,.01)</Male>
                    <Female>(0,0)</Female>
                    <Fat>(0,0)</Fat>
                    <Thin>(0,0)</Thin>
                    <Hulk>(0,0)</Hulk>
                  </bodyTypes>
                  <crownTypes>
                    <Average_Normal>(-.51,.88)</Average_Normal>
                  </crownTypes>
                </east>
              </offsets>
              <useSkinColor>true</useSkinColor>
               
               
            </li>
          </bodyAddons>
          <alienskincolorgen Class="ColorGenerator_Options">
            <options>
              <!-- #88706c -->
              <li>
                <weight>10</weight>
                <only>RGBA(0.533, 0.439, 0.423)</only>
              </li>
              <!-- #b1b6b7 -->
              <li>
                <weight>10</weight>
                <only>RGBA(0.694, 0.713, 0.717)</only>
              </li>
              <!-- #838287  -->
              <li>
                <weight>10</weight>
                <only>RGBA(0.513, 0.509, 0.529)</only>
              </li>
              <!-- #b6aca8   -->
              <li>
                <weight>10</weight>
                <only>RGBA(0.713, 0.674, 0.658)</only>
              </li>
              <!-- #9e9b90  -->
              <li>
                <weight>10</weight>
                <only>RGBA(0.619, 0.607, 0.564)</only>
              </li>
            </options>
          </alienskincolorgen>
          <useSkincolorForHair>true</useSkincolorForHair>
        </alienPartGenerator>



        <forcedRaceTraitEntries>
          <li>
            <!-- never forget hurhur -->
            <defName>GreatMemory</defName>
            <chance>20</chance>
          </li>
          <li>
            <!-- social animals -->
            <defName>Kind</defName>
            <chance>20</chance>
          </li>
        </forcedRaceTraitEntries>


      </generalSettings>


      <graphicPaths>
        <li>
          <head>Betas/BetaElephant/Head/</head>
        </li>
      </graphicPaths>


      <hairSettings>
        <!-- elephants have enough cranial accessories -->
        <hasHair>false</hasHair>
      </hairSettings>


    </alienRace>

    <race>
      <!-- live longer than other betas -->
      <lifeExpectancy>100</lifeExpectancy>
      <leatherDef>Leather_Elephant</leatherDef>
      <body>HumanWithTrunkAndTusks</body>
      <!-- big boys -->
      <baseBodySize>1.75</baseBodySize>
      <baseHealthScale>1.75</baseHealthScale>
      <!-- eat like big boys too -->
      <baseHungerRate>1.75</baseHungerRate>
      <lifeStageAges>
        <li>
          <def>BetaAdult</def>
          <minAge>18</minAge>
          <soundWounded>Pawn_Elephant_Injured</soundWounded>
          <soundDeath>Pawn_Elephant_Dead</soundDeath>
          <soundCall>Pawn_Elephant_Call</soundCall>
          <soundAngry>Pawn_Elephant_Angry</soundAngry>
        </li>

      </lifeStageAges>
      <soundMeleeHitPawn>Pawn_Melee_BigBash_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_BigBash_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_BigBash_Miss</soundMeleeMiss>
      <ageGenerationCurve>
        <points>
          <li>(14,0)</li>
          <li>(16,100)</li>
          <li>(50,100)</li>
          <li>(60,30)</li>
          <li>(70,18)</li>
          <li>(80,10)</li>
          <li>(90,3)</li>
          <li>(100,0)</li>
        </points>
      </ageGenerationCurve>
    </race>


  </AlienRace.ThingDef_AlienRace>
</Defs>