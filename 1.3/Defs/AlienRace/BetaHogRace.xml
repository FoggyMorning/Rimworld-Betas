<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <AlienRace.ThingDef_AlienRace ParentName="BaseBetaPawn">
    <defName>BetaHog</defName>
    <label>beta-humanoid (hog)</label>
    <description>A "Beta", a Beta Class Humanoid Lifeform. Part human and part animal. The property of the Corporation that created them. The Galactic Workers Alliance secured semi-human rights for Betas, and now some have purchased their freedom.</description>

    <statBases>
      <LeatherAmount>30</LeatherAmount>
      <MarketValue>1500</MarketValue>
    </statBases>

    <tools>
      <li>
        <label>tusk</label>
        <capacities>
          <li>Scratch</li>
          <li>Stab</li>
        </capacities>
        <power>9.7</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>TuskAttackTool</linkedBodyPartsGroup>
      </li>
      <li>
        <label>left fist</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>4</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>LeftHand</linkedBodyPartsGroup>
      </li>
      <li>
        <label>right fist</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>4</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>RightHand</linkedBodyPartsGroup>
      </li>
      <li>
        <label>teeth</label>
        <capacities>
          <li>Bite</li>
        </capacities>
        <power>8.5</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
        <chanceFactor>0.7</chanceFactor>
      </li>
      <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>6</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
        <chanceFactor>0.2</chanceFactor>
      </li>
    </tools>

    <alienRace>

      <generalSettings>
        <humanRecipeImport>true</humanRecipeImport>
        <alienPartGenerator>
          <aliencrowntypes>
            <li>Average_Normal</li>
          </aliencrowntypes>
          <alienbodytypes>
          </alienbodytypes>
          <customDrawSize>(.8, .8)</customDrawSize>
          <customHeadDrawSize>(.8,.8)</customHeadDrawSize>
          <customPortraitDrawSize>(.8,.8)</customPortraitDrawSize>
          <customPortraitHeadDrawSize>(.8,.8)</customPortraitHeadDrawSize>
          <headOffset>(0, 0)</headOffset>
          <useGenderedHeads>true</useGenderedHeads>
          <colorChannels>
            <li>
              <name>skin</name>
              <first Class="ColorGenerator_Options">
                <options>
                  <!-- #907757 -->
                  <li>
                    <weight>10</weight>
                    <only>RGBA(0.564, 0.466, 0.341,1)</only>
                  </li>
                  <!-- #4c3221 -->
                  <li>
                    <weight>10</weight>
                    <only>RGBA(0.298, 0.196, 0.129,1)</only>
                  </li>
                  <!-- #5c1c0c -->
                  <li>
                    <weight>10</weight>
                    <only>RGBA(0.360, 0.109, 0.047,1)</only>
                  </li>
                  <!-- #d4a464 -->
                  <li>
                    <weight>10</weight>
                    <only>RGBA(0.831, 0.643, 0.392,1)</only>
                  </li>
                  <!-- #554a40 -->
                  <li>
                    <weight>10</weight>
                    <only>RGBA(0.333, 0.290, 0.250,1)</only>
                  </li>
                </options>
              </first>
              <second Class="AlienRace.ColorGenerator_CustomAlienChannel">
                <colorChannel>skin_1</colorChannel>
              </second>
            </li>
          </colorChannels>
          <bodyAddons>
            <li>
              <path>Betas/BetaHog/Ears/Ear_Left</path>
              <bodyPart>BetaHumanoids_BodyPart_OuterEar_Normal_Left</bodyPart>
              <drawSize>.8</drawSize>
              <inFrontOfBody>true</inFrontOfBody>
              <offsets>
                <south>
                  <crownTypes>
                    <Average_Normal>( 0.0, 0.3 )</Average_Normal>
                  </crownTypes>
                </south>
                <north>
                  <crownTypes>
                    <Average_Normal>( 0.0, 0.3 )</Average_Normal>
                  </crownTypes>
                </north>
                <east>
                  <bodyTypes>
                    <Male>(0.05,.00)</Male>
                    <Female>(0,0)</Female>
                    <Fat>(0,0)</Fat>
                    <Thin>(0,0)</Thin>
                    <Hulk>(0,0)</Hulk>
                  </bodyTypes>
                  <crownTypes>
                    <Average_Normal>( -0.1, 0.3 )</Average_Normal>
                  </crownTypes>
                </east>
              </offsets>


            </li>
            <li>
              <path>Betas/BetaHog/Ears/Ear_Right</path>
              <bodyPart>BetaHumanoids_BodyPart_OuterEar_Normal_Right</bodyPart>
              <linkVariantIndexWithPrevious>true</linkVariantIndexWithPrevious>
              <drawSize>.8</drawSize>
              <inFrontOfBody>true</inFrontOfBody>
              <offsets>
                <south>
                  <crownTypes>
                    <Average_Normal>( 0.0, 0.3 )</Average_Normal>
                  </crownTypes>
                </south>
                <north>
                  <crownTypes>
                    <Average_Normal>( 0.0, 0.3 )</Average_Normal>
                  </crownTypes>
                </north>
                <east>
                  <bodyTypes>
                    <Male>(0.05,.00)</Male>
                    <Female>(0,0)</Female>
                    <Fat>(0,0)</Fat>
                    <Thin>(0,0)</Thin>
                    <Hulk>(0,0)</Hulk>
                  </bodyTypes>
                  <crownTypes>
                    <Average_Normal>( -0.1, 0.3 )</Average_Normal>
                  </crownTypes>
                </east>
              </offsets>


            </li>
            <li>
              <path>Betas/BetaHog/Tusks/Tusk_Left</path>
              <bodyPart>BetaHumanoids_BodyPart_Tusk_Small_Left</bodyPart>
              <drawSize>.8</drawSize>
              <inFrontOfBody>true</inFrontOfBody>
              <offsets>
                <south>
                  <crownTypes>
                    <Average_Normal>( 0.0, 0.32 )</Average_Normal>
                  </crownTypes>
                </south>
                <north>
                </north>
                <east>
                  <bodyTypes>
                    <Male>( 0.05, 0.00)</Male>
                    <Female>(0,0)</Female>
                    <Fat>(0,0)</Fat>
                    <Thin>(0,0)</Thin>
                    <Hulk>(0,0)</Hulk>
                  </bodyTypes>
                  <crownTypes>
                    <Average_Normal>( -0.12, 0.37 )</Average_Normal>
                  </crownTypes>
                </east>
              </offsets>
              <hiddenUnderApparelFor>
                <li>FullHead</li>
              </hiddenUnderApparelFor>
              <!-- females don't have visible tusks -->
              <drawForFemale>false</drawForFemale>
            </li>
            <li>
              <path>Betas/BetaHog/Tusks/Tusk_Right</path>
              <bodyPart>BetaHumanoids_BodyPart_Tusk_Small_Right</bodyPart>
              <linkVariantIndexWithPrevious>true</linkVariantIndexWithPrevious>
              <drawSize>.8</drawSize>
              <inFrontOfBody>true</inFrontOfBody>
              <offsets>
                <south>
                  <crownTypes>
                    <Average_Normal>( 0.0, 0.32 )</Average_Normal>
                  </crownTypes>
                </south>
                <north>
                </north>
                <east>
                  <bodyTypes>
                    <Male>( 0.05, 0.00)</Male>
                    <Female>(0,0)</Female>
                    <Fat>(0,0)</Fat>
                    <Thin>(0,0)</Thin>
                    <Hulk>(0,0)</Hulk>
                  </bodyTypes>
                  <crownTypes>
                    <Average_Normal>( -0.12, 0.37 )</Average_Normal>
                  </crownTypes>
                </east>
              </offsets>
              <hiddenUnderApparelFor>
                <li>FullHead</li>
              </hiddenUnderApparelFor>
              <!-- females don't have visible tusks -->
              <drawForFemale>false</drawForFemale>
            </li>
          </bodyAddons>
        </alienPartGenerator>

        <forcedRaceTraitEntries>
          <li>
            <!-- hogs are smart -->
            <defName>FastLearner</defName>
            <chance>20</chance>
          </li>
          <li>
            <!-- https://youtu.be/2xUynRdzzsM -->
            <defName>Cannibal</defName>
            <chance>20</chance>
          </li>
        </forcedRaceTraitEntries>
      </generalSettings>

      <graphicPaths>
        <li>
          <head>Betas/BetaHog/Head/</head>
        </li>
      </graphicPaths>

      <styleSettings>
        <li>
          <key>HairDef</key>
          <value>
            <hasStyle>true</hasStyle>
            <styleTagsOverride>
              <li>BetaHog</li>
            </styleTagsOverride>
          </value>
        </li>
        <li>
          <key>BeardDef</key>
          <value>
            <hasStyle>false</hasStyle>
          </value>
        </li>
      </styleSettings>
    </alienRace>

    <race>
      <leatherDef>Leather_Pig</leatherDef>
      <body>BetaHumanoids_Bodies_HumanLikeWithSmallTusks</body>
      <baseBodySize>0.9</baseBodySize>
      <baseHealthScale>0.9</baseHealthScale>
      <lifeStageAges>
        <li>
          <def>BetaAdult</def>
          <minAge>18</minAge>
          <soundWounded>Pawn_Wildboar_Wounded</soundWounded>
          <soundDeath>Pawn_Wildboar_Death</soundDeath>
          <soundCall>Pawn_Wildboar_Call</soundCall>
          <soundAngry>Pawn_Wildboar_Angry</soundAngry>
        </li>

      </lifeStageAges>
      <soundMeleeHitPawn>Pawn_Melee_SmallScratch_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_SmallScratch_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_SmallScratch_Miss</soundMeleeMiss>
    </race>
    <recipes>
      <li>BetaHumanoids_Install_Biological_OuterEar_Normal</li>
      <li>BetaHumanoids_Install_Prosthetic_OuterEar_Normal</li>
      <li>BetaHumanoids_Install_Bionic_OuterEar_Normal</li>
      <li>BetaHumanoids_Install_Prosthetic_Tusk_Small</li>
    </recipes>

  </AlienRace.ThingDef_AlienRace>
</Defs>