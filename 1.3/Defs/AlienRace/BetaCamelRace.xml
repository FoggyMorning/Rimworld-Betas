<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <AlienRace.ThingDef_AlienRace ParentName="BaseBetaPawn">
    <defName>BetaCamel</defName>
    <label>beta-humanoid (camel)</label>
    <description>A "Beta", a Beta Class Humanoid Lifeform. Part human and part animal. The property of the Corporation that created them. The Galactic Workers Alliance secured semi-human rights for Betas, and now some have purchased their freedom.</description>

    <statBases>
      <!-- heat tolerance -->
      <ComfyTemperatureMin>16</ComfyTemperatureMin>
      <ComfyTemperatureMax>60</ComfyTemperatureMax>
      <!-- extra value -->
      <MarketValue>2000</MarketValue>
      <!-- beasts of burden -->
      <CarryingCapacity>90</CarryingCapacity>
      <!--camels like to spit-->
      <SocialImpact>0.75</SocialImpact>
    </statBases>
    
        <tools>
            <li>
                <label>left fist</label>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>8.2</power>
                <cooldownTime>2</cooldownTime>
                <linkedBodyPartsGroup>LeftHand</linkedBodyPartsGroup>
                <surpriseAttack>
                    <extraMeleeDamages>
                        <li>
                            <def>Stun</def>
                            <amount>14</amount>
                        </li>
                    </extraMeleeDamages>
                </surpriseAttack>
            </li>
            <li>
                <label>right fist</label>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>8.2</power>
                <cooldownTime>2</cooldownTime>
                <linkedBodyPartsGroup>RightHand</linkedBodyPartsGroup>
                <surpriseAttack>
                    <extraMeleeDamages>
                        <li>
                            <def>Stun</def>
                            <amount>14</amount>
                        </li>
                    </extraMeleeDamages>
                </surpriseAttack>
            </li>
            <li>
                <label>teeth</label>
                <capacities>
                    <li>Bite</li>
                </capacities>
                <power>8.2</power>
                <cooldownTime>2</cooldownTime>
                <linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
                <chanceFactor>0.07</chanceFactor>
            </li>
            <li>
                <label>head</label>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>5</power>
                <cooldownTime>2</cooldownTime>
                <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
                <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
                <chanceFactor>0.2</chanceFactor>
            </li>
        </tools>


    <alienRace>

      <generalSettings>
        <humanRecipeImport>true</humanRecipeImport>
        <alienPartGenerator>
          <alienbodytypes>
          </alienbodytypes>
					<aliencrowntypes>
						<li>Average_Normal</li>
					</aliencrowntypes>
          <useGenderedHeads>true</useGenderedHeads>
          <bodyAddons>
            <li>
              <path>Betas/BetaCamel/Head/Ears</path>
              <bodyPart>AmputatableEar</bodyPart>
              <drawSize>1</drawSize>
              <inFrontOfBody>true</inFrontOfBody>
                <offsets>
                    <south>
                        <crownTypes>
                            <Average_Normal>( 0.0, 0.3 )</Average_Normal>
                        </crownTypes>
                    </south>
                    <north>
                        <crownTypes>
                            <Average_Normal>( 0.0, 0.3 )</Average_Normal>
                        </crownTypes>
                    </north>
                    <east>
                        <crownTypes>
                            <Average_Normal>( -0.22, 0.34 )</Average_Normal>
                        </crownTypes>
                    </east>
                </offsets>
               
               
            </li>
          </bodyAddons>
          <headOffset>( 0, 0.1 )</headOffset>
          <colorChannels>
            <li>
                <name>skin</name>
                <first Class="ColorGenerator_Options">
                  <options>
                    <!-- #c19a6b -->
                    <li>
                      <weight>10</weight>
                      <only>RGBA(0.756, 0.603, 0.419,1)</only>
                    </li>
                    <!-- #927B51 -->
                    <li>
                      <weight>10</weight>
                      <only>RGBA(0.572, 0.482, 0.317,1)</only>
                    </li>
                    <!-- #813a16 -->
                    <li>
                      <weight>10</weight>
                      <only>RGBA(0.505, 0.227, 0.086,1)</only>
                    </li>
                    <!-- #b3916d -->
                    <li>
                      <weight>10</weight>
                      <only>RGBA(0.701, 0.568, 0.427,1)</only>
                    </li>
                    <!-- #a6773f -->
                    <li>
                      <weight>10</weight>
                      <only>RGBA(0.650, 0.466, 0.247,1)</only>
                    </li>
                  </options>
                </first>
                <second Class="AlienRace.ColorGenerator_CustomAlienChannel">
                    <colorChannel>skin_1</colorChannel>
                </second>
            </li>
        </colorChannels>
        </alienPartGenerator>





        <forcedRaceTraitEntries>
          <!-- spitters -->
          <li>
            <defName>Abrasive</defName>
            <chance>20</chance>
          </li>
          <!-- camel betas are raised on a wasteland planet -->
          <li>
            <defName>Ascetic</defName>
            <chance>20</chance>
          </li>
        </forcedRaceTraitEntries>


      </generalSettings>

      <styleSettings>
        <li>
          <key>HairDef</key>
          <value>
            <hasStyle>true</hasStyle>
          </value>
        </li>
        <li>
          <key>BeardDef</key>
          <value>
            <hasStyle>false</hasStyle>
          </value>
        </li>
      </styleSettings>
      
      <graphicPaths>
        <li>
          <head>Betas/BetaCamel/Head/</head>
        </li>
      </graphicPaths>


    </alienRace>

    <race>
      <!-- special leather -->
      <leatherDef>Leather_Camel</leatherDef>
      <!-- eat less -->
      <baseHungerRate>.80</baseHungerRate>

      <lifeStageAges>
        <li>
          <def>BetaAdult</def>
          <minAge>18</minAge>
          <soundWounded>Pawn_Dromedary_Wounded</soundWounded>
          <soundDeath>Pawn_Dromedary_Death</soundDeath>
          <soundCall>Pawn_Dromedary_Call</soundCall>
          <soundAngry>Pawn_Dromedary_Angry</soundAngry>
        </li>
      </lifeStageAges>

      <soundMeleeHitPawn>Pawn_Melee_BigBash_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_BigBash_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_BigBash_Miss</soundMeleeMiss>
     
    </race>


  </AlienRace.ThingDef_AlienRace>
</Defs>