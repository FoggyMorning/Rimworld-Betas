<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <AlienRace.ThingDef_AlienRace ParentName="BaseBetaPawn">
    <defName>BetaElephant</defName>
    <label>beta-humanoid (elephant)</label>
    <description>A "Beta", a Beta Class Humanoid Lifeform. Part human and part animal. The property of the Corporation that created them. The Galactic Workers Alliance secured semi-human rights for Betas, and now some have purchased their freedom.</description>

    <statBases>
      <!-- big boys -->
      <Mass>90</Mass>
      <MarketValue>3000</MarketValue>
      <CarryingCapacity>90</CarryingCapacity>
      <SocialImpact>1.5</SocialImpact>
    </statBases>
    <tools>
      <li>
        <label>left fist</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>8.2</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>LeftHand</linkedBodyPartsGroup>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>14</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
      <li>
        <label>tusk</label>
        <capacities>
          <li>Scratch</li>
          <li>Stab</li>
        </capacities>
        <power>25</power>
        <cooldownTime>2.6</cooldownTime>
        <linkedBodyPartsGroup>TuskAttackTool</linkedBodyPartsGroup>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>14</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
      <li>
        <label>right fist</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>16.9</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>RightHand</linkedBodyPartsGroup>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>14</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
      <li>
        <label>trunk</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>8</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
        <chanceFactor>0.07</chanceFactor>
      </li>
      <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>14</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
        <chanceFactor>0.2</chanceFactor>
      </li>
    </tools>

    <alienRace>

      <generalSettings>
        <humanRecipeImport>true</humanRecipeImport>
        <alienPartGenerator>
          <aliencrowntypes>
            <li>Average_Normal</li>
          </aliencrowntypes>
          <useGenderedHeads>true</useGenderedHeads>
          <customDrawSize>(1.65, 1.65)</customDrawSize>
          <customHeadDrawSize>(1.4,1.4)</customHeadDrawSize>
          <customPortraitDrawSize>(1.65, 1.65)</customPortraitDrawSize>
          <customPortraitHeadDrawSize>(1.4,1.4)</customPortraitHeadDrawSize>
          <headOffset>(0, .3)</headOffset>
          <bodyAddons>
            <li>
              <path>Betas/BetaElephant/Head/Ear</path>
              <bodyPart>AmputatableEar</bodyPart>
              <drawSize>1.4</drawSize>
              <inFrontOfBody>false</inFrontOfBody>
              <offsets>
                <south>
                  <layerOffset>-1.003</layerOffset>
                  <crownTypes>
                    <Average_Normal>( 0.0, 0.6 )</Average_Normal>
                  </crownTypes>
                </south>
                <north>
                  <layerOffset>-1.003</layerOffset>
                  <crownTypes>
                    <Average_Normal>( 0.0, 0.6 )</Average_Normal>
                  </crownTypes>
                </north>
                <east>
                  <layerOffset>-1.003</layerOffset>
                  <crownTypes>
                    <Average_Normal>( 0.0, 0.6 )</Average_Normal>
                  </crownTypes>
                </east>
              </offsets>
              <hiddenUnderApparelFor>
                <li>FullHead</li>
              </hiddenUnderApparelFor>


            </li>
            <li>
              <path>Betas/BetaElephant/Head/Tusk</path>
              <bodyPart>AmputatableTusk</bodyPart>
              <drawSize>1.4</drawSize>
              <inFrontOfBody>false</inFrontOfBody>
              <offsets>
                <south>
              <layerOffset>-1.002</layerOffset>
                  <crownTypes>
                    <Average_Normal>( 0.0, 0.6 )</Average_Normal>
                  </crownTypes>
                </south>
                <north>
                  <crownTypes>
                  </crownTypes>
                </north>
                <east>
              <layerOffset>-1.002</layerOffset>
                  <bodyTypes>
                    <Male>(.08,.04)</Male>
                    <Female>(0,0)</Female>
                    <Fat>(0,0)</Fat>
                    <Thin>(0,0)</Thin>
                    <Hulk>(0,0)</Hulk>
                  </bodyTypes>
                  <crownTypes>
                    <Average_Normal>( 0.0, 0.65 )</Average_Normal>
                  </crownTypes>
                </east>
              </offsets>


            </li>
            <li>
              <path>Betas/BetaElephant/Head/Trunk</path>
              <bodyPart>AmputatableTrunk</bodyPart>
              <drawSize>1.4</drawSize>
              <inFrontOfBody>false</inFrontOfBody>
              <offsets>
                <south>
              <layerOffset>-1.001</layerOffset>
                  <crownTypes>
                    <Average_Normal>( 0.0, 0.6 )</Average_Normal>
                  </crownTypes>
                </south>
                <north>
                  <crownTypes>
                  </crownTypes>
                </north>
                <east>
              <layerOffset>-1.001</layerOffset>
                  <bodyTypes>
                    <Male>(.04,.01)</Male>
                    <Female>(0,0)</Female>
                    <Fat>(0,0)</Fat>
                    <Thin>(0,0)</Thin>
                    <Hulk>(0,0)</Hulk>
                  </bodyTypes>
                  <crownTypes>
                    <Average_Normal>( -0.1, 0.6 )</Average_Normal>
                  </crownTypes>
                </east>
              </offsets>


            </li>
          </bodyAddons>
          <colorChannels>
            <li>
              <name>skin</name>
              <first Class="ColorGenerator_Options">
                <options>
                  <!-- #88706c -->
                  <li>
                    <weight>10</weight>
                    <only>RGBA(0.533, 0.439, 0.423,1)</only>
                  </li>
                  <!-- #b1b6b7 -->
                  <li>
                    <weight>10</weight>
                    <only>RGBA(0.694, 0.713, 0.717,1)</only>
                  </li>
                  <!-- #838287  -->
                  <li>
                    <weight>10</weight>
                    <only>RGBA(0.513, 0.509, 0.529,1)</only>
                  </li>
                  <!-- #b6aca8   -->
                  <li>
                    <weight>10</weight>
                    <only>RGBA(0.713, 0.674, 0.658,1)</only>
                  </li>
                  <!-- #9e9b90  -->
                  <li>
                    <weight>10</weight>
                    <only>RGBA(0.619, 0.607, 0.564,1)</only>
                  </li>
                </options>
              </first>
              <second Class="AlienRace.ColorGenerator_CustomAlienChannel">
                <colorChannel>skin_1</colorChannel>
              </second>
            </li>
          </colorChannels>
        </alienPartGenerator>



        <forcedRaceTraitEntries>
          <li>
            <!-- never forget hurhur -->
            <defName>GreatMemory</defName>
            <chance>20</chance>
          </li>
          <li>
            <!-- social animals -->
            <defName>Kind</defName>
            <chance>20</chance>
          </li>
        </forcedRaceTraitEntries>


      </generalSettings>


      <graphicPaths>
        <li>
          <head>Betas/BetaElephant/Head/</head>
        </li>
      </graphicPaths>


      <styleSettings>
        <li>
          <key>HairDef</key>
          <value>
            <hasStyle>true</hasStyle>
          </value>
        </li>
        <li>
          <key>BeardDef</key>
          <value>
            <hasStyle>false</hasStyle>
          </value>
        </li>
      </styleSettings>


    </alienRace>

    <race>
      <!-- live longer than other betas -->
      <lifeExpectancy>100</lifeExpectancy>
      <leatherDef>Leather_Elephant</leatherDef>
      <body>HumanWithTrunkAndTusks</body>
      <!-- big boys -->
      <baseBodySize>1.75</baseBodySize>
      <baseHealthScale>1.75</baseHealthScale>
      <!-- eat like big boys too -->
      <baseHungerRate>1.75</baseHungerRate>
      <lifeStageAges>
        <li>
          <def>BetaAdult</def>
          <minAge>18</minAge>
          <soundWounded>Pawn_Elephant_Injured</soundWounded>
          <soundDeath>Pawn_Elephant_Dead</soundDeath>
          <soundCall>Pawn_Elephant_Call</soundCall>
          <soundAngry>Pawn_Elephant_Angry</soundAngry>
        </li>

      </lifeStageAges>
      <soundMeleeHitPawn>Pawn_Melee_BigBash_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_BigBash_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_BigBash_Miss</soundMeleeMiss>
      <ageGenerationCurve>
        <points>
          <li>(14,0)</li>
          <li>(16,100)</li>
          <li>(50,100)</li>
          <li>(60,30)</li>
          <li>(70,18)</li>
          <li>(80,10)</li>
          <li>(90,3)</li>
          <li>(100,0)</li>
        </points>
      </ageGenerationCurve>
    </race>


  </AlienRace.ThingDef_AlienRace>
</Defs>